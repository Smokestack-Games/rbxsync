{
  "name": "rbxsync",
  "displayName": "RbxSync",
  "description": "Two-way sync between Roblox Studio and VS Code. One-click extraction, real-time bidirectional sync, console streaming, and MCP integration for AI workflows.",
  "version": "1.3.0",
  "license": "SEE LICENSE IN LICENSE.txt",
  "publisher": "rbxsync",
  "icon": "media/icons/rbxsync.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/devmarissa/rbxsync"
  },
  "homepage": "https://rbxsync.dev",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "roblox",
    "luau",
    "sync",
    "git",
    "game development"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:rbxsync.sidebarView",
    "workspaceContains:rbxsync.json",
    "onLanguage:rbxjson"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rbxjson",
        "aliases": [
          "Roblox JSON",
          "rbxjson"
        ],
        "extensions": [
          ".rbxjson"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rbxjson",
        "scopeName": "source.rbxjson",
        "path": "./syntaxes/rbxjson.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "rbxsync-icons",
        "label": "RbxSync Icons (Roblox)",
        "path": "./icons/rbxsync-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "rbxsync.connect",
        "title": "RbxSync: Connect"
      },
      {
        "command": "rbxsync.disconnect",
        "title": "RbxSync: Disconnect"
      },
      {
        "command": "rbxsync.extract",
        "title": "RbxSync: Extract",
        "enablement": "rbxsync.connected"
      },
      {
        "command": "rbxsync.undoExtract",
        "title": "RbxSync: Undo Extract"
      },
      {
        "command": "rbxsync.sync",
        "title": "RbxSync: Sync",
        "enablement": "rbxsync.connected"
      },
      {
        "command": "rbxsync.runTest",
        "title": "RbxSync: Play Test",
        "icon": "$(play)",
        "enablement": "rbxsync.connected"
      },
      {
        "command": "rbxsync.toggleMetadataFiles",
        "title": "RbxSync: Show/Hide .rbxjson",
        "icon": "$(json)"
      },
      {
        "command": "rbxsync.openMetadata",
        "title": "RbxSync: Open Metadata"
      },
      {
        "command": "rbxsync.refresh",
        "title": "RbxSync: Refresh"
      },
      {
        "command": "rbxsync.openConsole",
        "title": "RbxSync: Open Console",
        "icon": "$(terminal)",
        "enablement": "rbxsync.connected"
      },
      {
        "command": "rbxsync.closeConsole",
        "title": "RbxSync: Close Console"
      },
      {
        "command": "rbxsync.toggleE2EMode",
        "title": "RbxSync: Toggle E2E Testing Mode"
      },
      {
        "command": "rbxsync.recoverDeleted",
        "title": "RbxSync: Recover Deleted Folder"
      },
      {
        "command": "rbxsync.openSettings",
        "title": "RbxSync: Settings",
        "icon": "$(gear)"
      },
      {
        "command": "rbxsync.toggleCat",
        "title": "RbxSync: Toggle Cat",
        "icon": "$(heart)"
      },
      {
        "command": "rbxsync.linkToStudio",
        "title": "RbxSync: Link to Studio",
        "icon": "$(link)",
        "enablement": "rbxsync.connected"
      },
      {
        "command": "rbxsync.unlinkFromStudio",
        "title": "RbxSync: Unlink from Studio",
        "icon": "$(debug-disconnect)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rbxsync",
          "title": "RbxSync",
          "icon": "media/icons/rbxsync-activity.svg"
        }
      ]
    },
    "views": {
      "rbxsync": [
        {
          "type": "webview",
          "id": "rbxsync.sidebarView",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "rbxsync.toggleCat",
          "when": "view == rbxsync.sidebarView",
          "group": "navigation"
        },
        {
          "command": "rbxsync.openConsole",
          "when": "view == rbxsync.sidebarView",
          "group": "navigation"
        },
        {
          "command": "rbxsync.openSettings",
          "when": "view == rbxsync.sidebarView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "RbxSync",
      "properties": {
        "rbxsync.serverPort": {
          "type": "number",
          "default": 44755,
          "description": "Server port"
        },
        "rbxsync.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Auto-connect on startup"
        },
        "rbxsync.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show completion notifications"
        },
        "rbxsync.deleteOrphans": {
          "type": "boolean",
          "default": true,
          "description": "Delete orphaned instances in Studio that don't exist in local files during sync"
        },
        "rbxsync.useDiffSync": {
          "type": "boolean",
          "default": true,
          "description": "Use diff-based sync to only send changed files instead of all files (more efficient)"
        },
        "rbxsync.generateProjectJson": {
          "type": "boolean",
          "default": false,
          "description": "Generate project.json for Luau LSP compatibility"
        },
        "rbxsync.linkedStudioId": {
          "type": ["number", "null"],
          "default": null,
          "description": "Place ID of the Studio instance linked to this workspace. Null means no studio is linked.",
          "scope": "window"
        },
        "rbxsync.linkedStudioSessionId": {
          "type": ["string", "null"],
          "default": null,
          "description": "Session ID of the linked Studio instance (for unpublished places with PlaceId=0)",
          "scope": "window"
        }
      }
    },
    "configurationDefaults": {
      "files.exclude": {
        "**/*.rbxjson": true
      },
      "files.associations": {
        "*.rbxjson": "rbxjson"
      },
      "[rbxjson]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggest.showWords": false,
        "editor.suggest.localityBonus": false,
        "editor.suggest.shareSuggestSelections": false,
        "editor.quickSuggestions": {
          "strings": true,
          "comments": false,
          "other": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run generate-schema && npm run build",
    "build": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish",
    "generate-schema": "npx ts-node schemas/generate-schema.ts",
    "update-schema": "npm run generate-schema"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "jsonc-parser": "^3.3.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
